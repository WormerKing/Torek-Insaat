<div class="container-fluid">
	<div class="row pb-5">
		<div class="col-md-1 col-lg-2"></div>
		<div class="col-md-10 col-lg-8" style="background: #ddd;">
			<% @admins.each do |admin|%>
				<div class="text-center mt-3">
					<strong>Kullanıcı adı : </strong><span><%= admin.username%></span><br>
					<strong>Eposta : </strong><span><%= admin.email%></span><br><br>
					<%= link_to("Kaydı güncelle",edit_admin_registration_path(admin.username),class:"btn btn-warning")%>
					<%= button_to "Hesabı sil", admin_path(admin.username), data: { confirm: "Emin misiniz?", turbo_confirm: "Silinecek admin #{admin.username}" }, method: :delete ,class:"btn btn-danger mt-2"%>
					<%# link_to "Delete", admin, class: "button",
              				data: { turbo_method: :delete, turbo_confirm: "Really?!?" } %>
				</div>
				<hr>
			<% end %>
		</div>
		<div class="col-md-1 col-lg-2"></div>
	</div>
</div>