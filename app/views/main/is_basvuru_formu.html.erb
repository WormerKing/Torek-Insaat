<%= stylesheet_link_tag "is_basvuru_formu", media:"all", "data-turbo-track": "reload" %>
<section class="vh-100 gradient-custom ">
	<div class="container py-1 h-100">
        <div class="alert alert-danger text-center" role="alert">
            Açık bir iş başvurusu bulunamadı
        </div>
		<div class="row justify-content-center align-items-center h-75">
			<div class="col-12 col-lg-9 col-xl-7">
				<div class="card shadow-2-strong card-registration form-up" style="border-radius: 15px;">
					<div class="card-body p-1 ms-md-5 me-md-5">
						<h3 class="mb-5 pb-1 pb-md-0 mb-md-5 pt-5 text-center">İş başvuru formu</h3>
						<form>
							<div class="row">
								<div class="col-md-6 mb-4">

									<div class="form-outline">
										<input type="text" id="firstName" class="form-control form-control-lg" placeholder="Adınız"required/>
                                    </div>

								</div>
								<div class="col-md-6 mb-4">

									<div class="form-outline">
										<input type="text" id="lastName" class="form-control form-control-lg" placeholder="Soyadınız" required/>
									</div>

								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4 d-flex align-items-center">

									<div class="form-outline datepicker w-100">
										<input type="text" class="form-control form-control-lg" id="birthdayDate" placeholder="Doğum Tarihi" required/>
									</div>

								</div>
								<div class="col-md-6 mb-4">

									<h6 class="mb-2 pb-1">Cinsiyet: </h6>

									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="inlineRadioOptions" id="femaleGender"
											value="option1" checked />
										<label class="form-check-label" for="femaleGender">Kadın</label>
									</div>

									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="inlineRadioOptions" id="maleGender"
											value="option2" />
										<label class="form-check-label" for="maleGender">Erkek</label>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-6 mb-4 pb-2">

									<div class="form-outline">
										<input type="email" id="emailAddress" class="form-control form-control-lg" placeholder="Email" required/>
									</div>

								</div>
								<div class="col-md-6 mb-4 pb-2">

									<div class="form-outline">
										<input type="tel" id="phoneNumber" class="form-control form-control-lg" placeholder="Telefon Numaranız" required/>
									</div>

								</div>
							</div>

							<div class="row">
                                <div class="mb-3">
                                    <p for="formCv" class="form-label text-center">Bir Özgeçmiş Yükleyin</p>
                                    <input class="form-control form-control-sm" id="formCv" type="file">
                                </div>
                                <hr>
							</div>
							<div class="row">
								<div class="form-check ps-5">
								 	<input class="form-check-input" type="checkbox" id="userAgreement">
								  	<label class="form-check-label" for="userAgreement">
								    	Çalışan Adayı Aydınlatma Belgesini okudum
								  	</label>
								</div>
							</div>

							<div class="mt-4 pt-2 pb-5 text-center">
								<input class="btn btn-primary btn-lg" type="submit" value="Gönder" id="submitButton"disabled/>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<script>
	var checkbox = document.getElementById("userAgreement");
	var submit_button = document.getElementById("submitButton");

	checkbox.addEventListener("click",() => {	
		if (checkbox.checked == true) {
			submit_button.disabled = false;
		} else {
			submit_button.disabled = true;
		}
	});
</script>